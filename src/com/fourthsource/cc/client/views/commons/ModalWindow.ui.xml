<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 	xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    			xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
	</ui:style>
	<b:Modal ui:field="modal" title="My Modal" backdrop="STATIC" keyboard="true" animation="true">
	    <g:HorizontalPanel width="100%">
	    	<g:Image width="48px" height="48px" ui:field="imageWindowType"/>
	    	<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
	    		<g:Label ui:field="labelMessage" text="Message">Modal Content!</g:Label>
	    	</g:Cell>
	    </g:HorizontalPanel>
	    <b:ModalFooter ui:field="modalFooter">
		    <b:ButtonGroup>
		    	<b:Button icon="FILE" type="PRIMARY" ui:field="okButton">Yes</b:Button>
		    	<b:Button icon="FILE" type="PRIMARY" ui:field="noButton">No</b:Button>
		    	<b:Button icon="FILE" type="PRIMARY" ui:field="cancelButton">Cancel</b:Button>
	        </b:ButtonGroup>
	    </b:ModalFooter>
	</b:Modal>
</ui:UiBinder> 